{
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/__pycache__": true
    },
    "files.watcherExclude": {
        "**/node_modules": true,
        "**/.git": true
    },
    "github.copilot.enable": {
        "*": true
    },
    "github.copilot.inlineSuggest.enable": true
}